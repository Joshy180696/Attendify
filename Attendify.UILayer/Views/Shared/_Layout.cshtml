<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="nav">
            <div class="navbar">
                <i class='bx bx-menu'></i>
                <div class="logo"><a href="#">Attendify</a></div>
                <div class="nav-links">
                    <div class="sidebar-logo">
                        <span class="logo-name">Attendify</span>
                        <i class='bx bx-x'></i>
                    </div>
                    <ul class="links">
                        <li><a asp-action="Index" asp-controller="Home">HOME</a></li>
                        <li><a asp-action="Index" asp-controller="Events">EVENTS</a></li>
                        <li>
                            <a href="#">CONTACT</a>
                            <i class='bx bxs-chevron-down htmlcss-arrow arrow  '></i>
                            <ul class="htmlCss-sub-menu sub-menu">
                                <li><a href="https://github.com/Joshy180696" target="_blank"><i class="fa-brands fa-github"></i> GitHub</a></li>
                                <li><a href="https://www.linkedin.com/in/jo%C3%A3o-fernandes-746ab922a/" target="_blank"><i class="fa-brands fa-linkedin"></i> LinkedIn</a></li>
                            </ul>
                        </li>                  
                        <li><a href="#">ABOUT</a></li>
                      
                    </ul>
                </div>
                <div class="search-box">
                    <i class='bx bx-search'></i>
                    <div class="input-box">
                        <input type="text" placeholder="Search Event...">
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/docs.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
